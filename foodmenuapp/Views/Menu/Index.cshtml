@model List<foodmenuapp.Models.Dish>
@{
    ViewData["Title"] = "Menu";
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-6">
                <div class="d-flex justify-content-center">
                    <h4>@item.Name</h4>
                </div>
                <div class="d-flex justify-content-center">
                    <img src="@item.ImageUrl" style="width: 70%" />
                </div>
                <div class="d-flex justify-content-center">
                    @item.Price.ToString("N2") Rupees
                </div>
                <div class="d-flex justify-content-center">
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">View Dish</a>
                </div>
            </div>
        }
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <button id="openFormBtn" class="btn btn-primary">Add Dish</button>
        </div>
    </div>
</div>

<div id="addDishForm" class="container mt-4" style="display: none;">
    <div class="row">
        <div class="col">
            <form asp-action="AddToPage" method="post">
                <div class="form-group">
                    <label for="dishName">Dish Name:</label>
                    <input type="text" class="form-control" id="dishName" name="dishName" required />
                </div>
                <div class="form-group">
                    <label for="imageUrl">Image URL:</label>
                    <input type="text" class="form-control" id="imageUrl" name="imageUrl" required />
                </div>
                <div class="form-group">
                    <label for="price">Price:</label>
                    <input type="number" class="form-control" id="price" name="price" required />
                </div>
                <button type="submit" class="btn btn-success">Add to Page</button>
                <button type="button" class="btn btn-secondary ml-2" id="closeFormBtn">Cancel</button>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('openFormBtn').addEventListener('click', function() {
        document.getElementById('addDishForm').style.display = 'block';
    });

    document.getElementById('closeFormBtn').addEventListener('click', function() {
        document.getElementById('addDishForm').style.display = 'none';
    });
</script>
